
<% comment = @comment.present? ? @comment : @blog.comments.build%>
<div id="myModalmy" class="modal fade" role="dialog">
	<div class="col-md-4 col-md-offset-8">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header" style="color: skyblue; align-content: center;">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title">comment</h4>
				</div>
				<div class="modal-body" style="background-color: gray">
				<%= form_with(model: [ @blog,comment], local: true) do |form| %>
						<p>
    					<%= form.label :opinion %><br>
    					<%= form.text_area :opinion%>
  						</p>
 					 <p>
    				<%= form.submit class:"btn btn-info" %>
  					</p>
  					<%end%>
  			<div class="modal-body">
			
			</div>
		</div>
	</div>
</div>
