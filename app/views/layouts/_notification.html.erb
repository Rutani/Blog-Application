 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

<div id="myModal" class="modal fade" role="dialog">
	<div class="col-md-4 col-md-offset-8">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;
					</button>
						<h4 class="modal-title">Notification</h4>
				</div>
				<% if user_signed_in?%>
				<% @notification = Notification.where("user_id =?", current_user.id)%>
					<table>
					<% @notification.each do |notification| %>
						<div style="padding-left: 13px; color: blue;">
						 <tr>
						 	<td><%= notification.notifiable.user.username %>
 					 	 		<%= notification.notifiable_type %>
  				     	 		<%= "your" %>
            	    			<%= notification.blog.title%></td>
                			 		<td><% if notification.read == false%>
                 						<%= link_to'<button style="background-color:lightgre	en;">Unread</button>'.html_safe,change_val_path(notification)%></br>
                 					<% else %>
                 						<%= link_to'<button style="background-color:lightblue;">Read</button>'.html_safe,blog_path(notification.blog)%></br>
		                 			<% end %>
		                 		</td><tr>
							</div>
						<% end %>
						</table>
				<% else %>

				<%end%>
			<div class="modal-footer">
			</div>
			</div>
		</div>
	</div>
</div>